{
  "kind": "collectionType",
  "collectionName": "questions",
  "info": {
    "name": "Question"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "asker": {
      "type": "string"
    },
    "tweetUrl": {
      "type": "string"
    },
    "episode": {
      "model": "episode",
      "via": "questions"
    },
    "timestamp": {
      "type": "string",
      "regex": "/^([0-9]):([0-5][0-9]):([0-5][0-9])$"
    }
  }
}
